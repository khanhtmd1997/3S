@model List<TaskTranning.ViewModels.StoreViewModel>
@using TaskTranning.Resources
@inject ResourcesServices Localizer
@{
    ViewBag.Title = Localizer.GetLocalizedHtmlString("Page Store");
    Layout = "_NavbarDataTable";
}
    @if (TempData["succcessMessage"] != null)
    {
        <h5 class="text-danger text-center">@TempData["succcessMessage"]</h5>
    }
    <div class="sectionContent">
        <h3 class="text-center">@Localizer.GetLocalizedHtmlString("Page Store")</h3>
        @if (ViewBag.Count == 0)
        {
            <p>@Localizer.GetLocalizedHtmlString("NOT DATA OF TABLE") - <a asp-action="Create"><img src='~/image/create.png' width='35'/></a></p>
        }
        else
        {
            <p>@Localizer.GetLocalizedHtmlString("Finded"): @ViewBag.Count @Localizer.GetLocalizedHtmlString("Stores") - <a asp-action="Create"><img src='~/image/create.png' width='35'/></a></p>  
        }
        <table id="table_id" class="table table-bordered">
            <thead>
                <tr>
                    <th>@Localizer.GetLocalizedHtmlString("StoreName")</th>
                    <th>@Localizer.GetLocalizedHtmlString("Phone")</th>
                    <th>@Localizer.GetLocalizedHtmlString("Email")</th>
                    <th>@Localizer.GetLocalizedHtmlString("Street")</th>
                    <th>@Localizer.GetLocalizedHtmlString("City")</th>
                    <th>@Localizer.GetLocalizedHtmlString("State")</th>
                    <th>@Localizer.GetLocalizedHtmlString("ZipCode")</th>
                    <th>@Localizer.GetLocalizedHtmlString("Action")</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item  in Model)
            {
                if (@ViewBag.Count < 0)
                {
                    <p>@Localizer.GetLocalizedHtmlString("Not Data")</p>
                }
                else
                {
                    <tr>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.StoreName)
                        </td >
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Phone)

                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Street)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.ZipCode)
                        </td>
                        <td scope="row" style="text-align: center">
                            <a asp-action="Edit" asp-route-id="@item.Id"><img src='~/image/edit.png' width='40'/></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this?')">
                                <img src='~/image/delete.png'width='40'/>
                            </a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
