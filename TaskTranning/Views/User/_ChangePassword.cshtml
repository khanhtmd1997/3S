@model TaskTranning.ViewModels.EditPasswordUserViewModel
@using TaskTranning.Resources
@inject ResourcesServices Localizer
<div class="modal fade" id="edit-password" tabindex="-1" role="dialog" aria-labelledby="editPasswordLable" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPasswordLable">@Localizer.GetLocalizedHtmlString("Edit Page")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="EditPassword" asp-controller="User" method="post">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()"/>
                    <div class="form-group">
                        <label asp-for="NewPassword">@Localizer.GetLocalizedHtmlString("New Password")</label>
                        <input asp-for="NewPassword" type="password" class="form-control" placeholder=@Localizer.GetLocalizedHtmlString("New Password")/>
                        <span asp-validation-for="NewPassword" class="form-text text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">@Localizer.GetLocalizedHtmlString("Confirm Password")</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder=@Localizer.GetLocalizedHtmlString("Confirm Password")/>
                        <span asp-validation-for="ConfirmPassword" class="form-text text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer.GetLocalizedHtmlString("Close")</button>
                <button type="button" class="btn btn-primary" data-save="modal">@Localizer.GetLocalizedHtmlString("Save")</button>
            </div>
        </div>
    </div>
</div>